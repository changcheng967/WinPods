<?xml version="1.0" encoding="UTF-8"?>
<Window
    x:Class="WinPods.App.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="RootGrid">
        <Grid.Background>
            <SolidColorBrush Color="#000000"/>
        </Grid.Background>

        <Border CornerRadius="28" Background="#1C1C1E" BorderBrush="#2C2C2E" BorderThickness="1" Padding="50,40">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="750">
                <StackPanel Spacing="30" MaxWidth="600">
                <!-- Header -->
                <StackPanel Spacing="10">
                    <TextBlock Text="Settings"
                               FontSize="32"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="Customize your WinPods experience"
                               FontSize="16"
                               Foreground="#8E8E93"/>
                </StackPanel>

                <Rectangle Height="1" Fill="#2C2C2E" Margin="0,4,0,0"/>

                <!-- Auto-start Toggle -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Startup"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <Grid MinHeight="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="Start automatically with Windows"
                                       FontSize="15"
                                       Foreground="White"/>
                            <TextBlock Text="WinPods will start when you sign in to Windows"
                                       FontSize="13"
                                       Foreground="#8E8E93"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:ConnectionId='7' x:Name="AutoStartToggle"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      MinWidth="80"
                                                                  />
                    </Grid>
                </StackPanel>

                <Rectangle Height="1" Fill="#2C2C2E"/>

                <!-- Ear Detection -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Ear Detection"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <!-- Ear Detection Master Toggle -->
                    <Grid MinHeight="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="Enable ear detection"
                                       FontSize="15"
                                       Foreground="White"/>
                            <TextBlock Text="Automatically pause/resume media when removing/inserting AirPods"
                                       FontSize="13"
                                       Foreground="#8E8E93"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:ConnectionId='6' x:Name="EarDetectionToggle"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      MinWidth="80"
                                                                     />
                    </Grid>

                    <!-- Auto-Pause on Removal -->
                    <Grid MinHeight="60" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="Auto-pause on removal"
                                       FontSize="15"
                                       Foreground="White"/>
                            <TextBlock Text="Pause media when AirPods are removed from ears"
                                       FontSize="13"
                                       Foreground="#8E8E93"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:ConnectionId='5' x:Name="AutoPauseToggle"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      MinWidth="80"
                                                                  />
                    </Grid>

                    <!-- Auto-Resume on Insertion -->
                    <Grid MinHeight="60" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="Auto-resume on insertion"
                                       FontSize="15"
                                       Foreground="White"/>
                            <TextBlock Text="Resume media when AirPods are inserted back (only if we paused)"
                                       FontSize="13"
                                       Foreground="#8E8E93"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:ConnectionId='4' x:Name="AutoResumeToggle"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      MinWidth="80"
                                                                   />
                    </Grid>
                </StackPanel>

                <Rectangle Height="1" Fill="#2C2C2E"/>

                <!-- About -->
                <StackPanel Spacing="10">
                    <TextBlock Text="About"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="WinPods - AirPods Experience for Windows"
                               FontSize="14"
                               Foreground="#8E8E93"/>
                    <TextBlock Text="Version 1.0.0"
                               FontSize="13"
                               Foreground="#8E8E93"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:ConnectionId='3' Content="Done"
                        Width="130"
                        Height="42"
                        HorizontalAlignment="Center"
                        FontSize="15"
                        CornerRadius="21"
                        Margin="0,10,0,0"
                                            >
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#0A84FF"/>
                        <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                    </Button.Resources>
                </Button>
            </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>

