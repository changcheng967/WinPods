<?xml version="1.0" encoding="UTF-8"?>
<Window
    x:Class="WinPods.App.Views.PopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="RootGrid">
        <Grid.Background>
            <SolidColorBrush Color="#000000"/>
        </Grid.Background>

        <Border CornerRadius="32" Background="#1C1C1E" BorderBrush="#2C2C2E" BorderThickness="1" Padding="40,40" Margin="40">
            <StackPanel HorizontalAlignment="Center" Spacing="24">
                <!-- AirPods Icon -->
                <Grid Width="120" Height="100" HorizontalAlignment="Center">
                    <!-- Case Body -->
                    <Rectangle Width="120" Height="90"
                               RadiusX="30" RadiusY="30"
                               Fill="#FFFFFF"
                               Stroke="#E5E5EA"
                               StrokeThickness="1.5"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- LED Indicator -->
                    <Ellipse Width="6" Height="6"
                             Fill="#30D158"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             Margin="0,5,0,0"/>

                    <!-- Left AirPod -->
                    <Rectangle Width="30" Height="55"
                               RadiusX="15" RadiusY="15"
                               Fill="#FAFAFA"
                               Stroke="#E5E5EA"
                               StrokeThickness="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>

                    <!-- Right AirPod -->
                    <Rectangle Width="30" Height="55"
                               RadiusX="15" RadiusY="15"
                               Fill="#FAFAFA"
                               Stroke="#E5E5EA"
                               StrokeThickness="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                </Grid>

                <!-- Device Name -->
                <TextBlock x:ConnectionId='3' x:Name="DeviceNameText"
                           Text="AirPods Pro"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="500"
                           Margin="0,0,0,10"/>

                <!-- Battery Indicators -->
                <StackPanel Orientation="Horizontal" Spacing="50">
                    <!-- Left Pod -->
                    <StackPanel Spacing="12">
                        <Grid Width="70" Height="70">
                            <Ellipse x:ConnectionId='17' x:Name="LeftBatteryArc" Width="70" Height="70" Stroke="#3A3A3C" StrokeThickness="6" Fill="Transparent"/>
                        </Grid>
                        <TextBlock x:ConnectionId='15' x:Name="LeftBatteryText" Text="--%" FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='16' Text="⚡" FontSize="15" Foreground="#30D158" x:Name="LeftChargingIcon" Visibility="Collapsed"/>
                            <TextBlock Text="Left" FontSize="15" Foreground="#8E8E93" FontWeight="Medium"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right Pod -->
                    <StackPanel Spacing="12">
                        <Grid Width="70" Height="70">
                            <Ellipse x:ConnectionId='14' x:Name="RightBatteryArc" Width="70" Height="70" Stroke="#3A3A3C" StrokeThickness="6" Fill="Transparent"/>
                        </Grid>
                        <TextBlock x:ConnectionId='12' x:Name="RightBatteryText" Text="--%" FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='13' Text="⚡" FontSize="15" Foreground="#30D158" x:Name="RightChargingIcon" Visibility="Collapsed"/>
                            <TextBlock Text="Right" FontSize="15" Foreground="#8E8E93" FontWeight="Medium"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Case -->
                    <StackPanel Spacing="12">
                        <Grid Width="70" Height="70">
                            <Ellipse x:ConnectionId='11' x:Name="CaseBatteryArc" Width="70" Height="70" Stroke="#3A3A3C" StrokeThickness="6" Fill="Transparent"/>
                        </Grid>
                        <TextBlock x:ConnectionId='9' x:Name="CaseBatteryText" Text="--%" FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='10' Text="⚡" FontSize="15" Foreground="#30D158" x:Name="CaseChargingIcon" Visibility="Collapsed"/>
                            <TextBlock Text="Case" FontSize="15" Foreground="#8E8E93" FontWeight="Medium"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Noise Control Buttons -->
                <StackPanel Margin="0,10,0,0" Spacing="12">
                    <TextBlock Text="Noise Control"
                               FontSize="15"
                               Foreground="#8E8E93"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                        <Button x:ConnectionId='6' x:Name="NoiseCancellationButton"
                                Content="Noise Cancellation"
                                Width="140"
                                Height="40"
                                FontSize="13"
                                CornerRadius="20"
                                                                >
                            <Button.Resources>
                                <SolidColorBrush x:Key="ButtonBackground" Color="#2C2C2E"/>
                                <SolidColorBrush x:Key="ButtonForeground" Color="#8E8E93"/>
                            </Button.Resources>
                        </Button>
                        <Button x:ConnectionId='7' x:Name="TransparencyButton"
                                Content="Transparency"
                                Width="110"
                                Height="40"
                                FontSize="13"
                                CornerRadius="20"
                                                           >
                            <Button.Resources>
                                <SolidColorBrush x:Key="ButtonBackground" Color="#2C2C2E"/>
                                <SolidColorBrush x:Key="ButtonForeground" Color="#8E8E93"/>
                            </Button.Resources>
                        </Button>
                        <Button x:ConnectionId='8' x:Name="NoiseOffButton"
                                Content="Off"
                                Width="80"
                                Height="40"
                                FontSize="13"
                                CornerRadius="20"
                                                       >
                            <Button.Resources>
                                <SolidColorBrush x:Key="ButtonBackground" Color="#2C2C2E"/>
                                <SolidColorBrush x:Key="ButtonForeground" Color="#8E8E93"/>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Low Battery Warning Banner -->
                <Border x:ConnectionId='4' x:Name="WarningBanner"
                        Background="#323235"
                        CornerRadius="16"
                        Padding="24,18"
                        Margin="0,10,0,0"
                        Visibility="Collapsed">
                    <StackPanel Spacing="6">
                        <TextBlock Text="⚠️ Low Battery"
                                   Foreground="#FF453A"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='5' x:Name="WarningText"
                                   Text="Charge your AirPods soon."
                                   Foreground="#8E8E93"
                                   FontSize="14"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>

